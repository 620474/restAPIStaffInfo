extends layout
block content
    .col-md-4.col-md-offset-4
        h2 Registration
        div
            form(action="/registration", method="POST")
                p
                    input.form-control(name="username", type="text", placeholder="Your name")
                p
                    input.form-control(name="password", type="password", placeholder="*******")
                p
                    button.btn.btn-lg.btn-primary.btn-block(type="submit") Register
